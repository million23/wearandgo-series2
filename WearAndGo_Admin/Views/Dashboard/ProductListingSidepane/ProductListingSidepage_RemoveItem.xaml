<Page x:Class="WearAndGo_Admin.Views.Dashboard.ProductListingSidepane.ProductListingSidepage_RemoveItem"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WearAndGo_Admin.Views.Dashboard.ProductListingSidepane"
      mc:Ignorable="d" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductListingSidepage_RemoveItem">

    <GroupBox Header="Remove Item" Margin="20">
        <StackPanel Margin="20 0 0 0">
            <TextBox Name="in_ItemID" Style="{DynamicResource MaterialDesignFloatingHintTextBox}" materialDesign:HintAssist.Hint="Item ID"/>

            <Button Click="RemoveItem" Style="{DynamicResource MaterialDesignOutlinedButton}" HorizontalAlignment="Stretch" Margin="0 50 0 0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon VerticalAlignment="Center" Kind="Remove"/>
                    <TextBlock Text="Remove Item" />
                </StackPanel>
            </Button>
        </StackPanel>
    </GroupBox>
</Page>
